<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/nodeBoardIcon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nodeName"
        android:layout_alignTop="@id/nodeBoardIcon"
        android:layout_toEndOf="@id/nodeBoardIcon"
        android:layout_toStartOf="@+id/isSleepingIcon"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/nodeTag"
        android:layout_below="@+id/nodeName"
        android:layout_toEndOf="@id/nodeBoardIcon"
        android:layout_toStartOf="@+id/hasExtensionIcon"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isSleepingIcon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_sleeping_24dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasExtensionIcon"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/isSleepingIcon"
        android:src="@drawable/ic_extra_gp_24dp"
        android:visibility="gone" />



</RelativeLayout>